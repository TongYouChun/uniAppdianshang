.product .product-Middle .Content {
    margin: 0 30rpx 0 25rpx;
}
.product .product-Middle .Content .Content-left .mg {
      width: 208rpx;
      height: 192rpx;
      border: 1rpx solid #f5f5f5;
}
.product .product-Middle .Content .Content-right {
      margin-left: 18rpx;
}
.product .product-Middle .Content .Content-right .text {
        line-height: 34rpx;
}
.product .product-Middle .Content .Content-right .TexT {
        margin-bottom: 15rpx;
        height: 24rpx;
        line-height: 24rpx;
}
.product .product-Middle .Content .Content-right .TexT text:nth-child(2) {
          margin-left: 10rpx;
}
.product .product-Middle .money {
    margin: 20rpx 35rpx 100rpx 130rpx;
    line-height: 28rpx;
}
.product .product-bottom {
    margin-left: 100rpx;
}
.product .product-bottom .li {
      padding: 0 20rpx;
      height: 50rpx;
      line-height: 50rpx;
      border: 2rpx solid #666;
      border-radius: 14rpx;
}
.product .product-bottom .li:last-child {
      border: 2rpx solid #FFA732;
      color: #FFA732;
