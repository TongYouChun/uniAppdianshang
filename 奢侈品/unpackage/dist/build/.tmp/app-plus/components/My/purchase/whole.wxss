.product {
  margin-bottom: 48rpx;
  width: 710rpx;
  height: 515rpx;
}
.product .product-top {
    height: 84rpx;
    line-height: 84rpx;
}
.product .product-top .Name-left {
      margin-left: 25rpx;
}
.product .product-top .Name-left .ing {
        height: 30rpx;
        width: 30rpx;
}
.product .product-top .Name-left text {
        margin: 0 20rpx 0 10rpx;
}
.product .product-top .Name-left .ig {
        height: 24rpx;
